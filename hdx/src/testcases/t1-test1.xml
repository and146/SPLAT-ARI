<?xml version="1.0" ?>

<!-- No namespace declarations at all.  This should probably NOT be
     acceptable, since if you add the default namespace declaration,
     then the uri attribute on the variance element suddenly stops
     being in the same namespace as the other elements, almost
     certainly changing the semantics. -->

<hdx>
<ndx>
<data>file:test1.fits</data>
<variance uri="file:test2.fits"
  >file:test3.fits</variance>
